<div style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; padding: 60px; margin-bottom: 20px; border-radius: 8px; text-align: center;">
  <h2 style="font-size: 2.5rem;">{{ section.settings.heading }}</h2>
  <p style="font-size: 1.2rem; opacity: 0.8;">{{ section.settings.subtext }}</p>
</div>

{% schema %}
{
  "name": "通用测试模块",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "标题",
      "default": "默认标题"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "子内容",
      "default": "这里是描述文字"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "新增一个测试模块",
      "settings": {
        "heading": "我是刚生出来的模块",
        "bg_color": "#e0e0e0"
      }
    }
  ]
}
{% endschema %}